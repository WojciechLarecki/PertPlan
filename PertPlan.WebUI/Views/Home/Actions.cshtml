        { id: "B", name: "Action B", previousActions: ["A"] },
        { id: "C", name: "Action C", previousActions: ["A"] },
        { id: "D", name: "Action D", previousActions: ["B", "C"] },
    ];

    const svg = d3.select("#pert-diagram");

    const links = tasks.flatMap(task =>
        task.previousActions.map(prevActionId => ({ source: prevActionId, target: task.id }))
    );

    const simulation = d3.forceSimulation()
        .nodes(tasks)
        .force("link", d3.forceLink(links).id((d) => d.id).distance(300))
        .force("charge", d3.forceManyBody().strength(-200))
        .force("center", d3.forceCenter(400, 600));

    const nodes = svg
