<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.css" />
<script type="module" src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs"></script>

<style>
    .table {
        display: flex;
        flex-direction: column;
        width: 150px;
        border: 1px solid gray;
    }

    .row {
        display: flex;
    }

    .cell {
        width: 50px;
        height: 40px;
        background-color: lightblue;
        border: 1px solid gray;
    }

    .action {
        height: 40px;
        background-color: lightblue;
        border: 1px solid gray;
    }
</style>

<h1>PERT Diagram</h1>

<div class="mermaid">
    graph TD
    A[<div id="id1" class="table">
        <div class="row">
            <div class="cell">1</div>
            <div class="cell"></div>
            <div class="cell"></div>
        </div>
        <div class="action">Action A</div>
        <div class="row">
            <div class="cell"></div>
            <div class="cell"></div>
            <div class="cell"></div>
        </div>
    </div>] --> B(Preview)
    B --> C{decide}
    C --> D[Keep]
    C --> E[Edit Definition]
    E --> B
    D --> F[test]
</div>

@section scripts {
    <script type="module">
        document.addEventListener('DOMContentLoaded', () => {
            mermaid.initialize({ startOnLoad: true });
        });
    </script>
}

