<script type="module" src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs"></script>

<style>
    .table {
        display: flex;
        flex-direction: column;
        width: 150px;
        border: 1px solid gray;
    }

    .row {
        display: flex;
    }

    .cell {
        width: 50px;
        height: 40px;
        background-color: lightblue;
        border: 1px solid gray;
    }

    .action {
        height: 40px;
        background-color: lightblue;
        border: 1px solid gray;
    }
</style>

